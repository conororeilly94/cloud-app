<main role="main" id="blog-banner">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-4">Latest Blog Posts</h1>
      <p>Stay up to date with the latest property news at Property Scanner</p>
    </div>
  </div>
</main>

<div class="container">
    <% if @blogposts.empty? %>
        <p>No posts to display</p>
    <% else %>
        <% @blogposts.each do |blogpost| %>
            <div class="row border">
                <div class="col">
                    <h2 class="mt-2 "><%= blogpost.title %></h2>
                    <p class="mt-2"><%= blogpost.summary %></p>
                    <%= link_to "Read more", blogpost_path(blogpost), :style => "margin-bottom: 16px", class: "btn btn-success" %>
                </div>
            </div>
        <% end %>
    <% end %>
</div>