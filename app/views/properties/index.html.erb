<h1 class="h3">Properties</h1>
<br/>
<%= search_form_for @q do |f| %>
  <%= f.label :address_cont %>
  <%= f.search_field :address_cont %>
  <%= f.submit name:'' %>
<% end %>
<br/>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Price</th>
      <th>Rooms</th>
      <th>Bathrooms</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
          <td><%= property.name %></td>
          <td><%= property.address %></td>
          <td><%= property.price %></td>
          <td><%= property.rooms %></td>
          <td><%= property.bathrooms %></td>
          <td><%= property.account.first_name + ' ' + property.account.last_name  %></td>
          <% if property.account == current_account %>
            <td><%= link_to 'Show', property, class: 'btn btn-success' %></td>
            <td><%= link_to 'Edit', edit_property_path(property), class: 'btn btn-warning' %></td>
            <td><%= link_to 'Destroy', property, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Property', new_property_path, class: "btn btn-success" %>
