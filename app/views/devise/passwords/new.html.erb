<section class="form-auth text-center">
<h2 class="h3 mb-3 font-weight-normal">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email" %>
    </br>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Resend</button>
    <% end %>

<%= render "devise/shared/links" %>
</section>