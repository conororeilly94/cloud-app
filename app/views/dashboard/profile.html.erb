<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="row">
        <div class="col-lg-6">
          <p class="h4 mt-2 mb-2"><%= @account.full_name %></p>     
          <p class="text-muted">Registered for <%= time_ago_in_words @account.created_at %></p>       
        </div>
      </div>

      <div class="row border-top mt-5 pt-4">
        <div class="col">
          <p class="h5">Description</p>          

          <div id="prop-details" class="mb-5">
            <%= @account.details %>
          </div>
          <button class="btn btn-outline-info mt-3" id="toggleDetails">Show More</button>
          </div>
      </div>
    </div>

    <div class=col-md-4>
      <%= render "properties/profile_contact_details", agent: @account %>

      <div class="col-md-10 offset-md-1 text-center">
        <div class="row mt-sm-3 bg-light p-3">
          <div class="col-6">
            <p class="m-0"><strong>Sold</strong><br /></p>
            <span class="lead"><%= @properties_sold %></span>
          </div>
          <div class="col-6">
            <p class="m-0"><strong>For Sale</strong><br /></p>
            <span class="lead"><%= @properties_for_sale %></span>
          </div>
          <div class="col-6">
            <p class="m-0"><strong>Leased</strong><br /></p>
            <span class="lead"><%= @properties_leased %></span>
          </div>
          <div class="col-6">
            <p class="m-0"><strong>For Rent</strong><br /></p>
            <span class="lead"><%= @properties_for_rent %></span>
          </div>
        </div>
      </div>
    </div>
       
